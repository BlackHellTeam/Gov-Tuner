busybox="/system/etc/GovTuner/busybox"
ver="2.5"
divider="==============================================="

$busybox echo "CHANGELOG FOR $ver"
$busybox echo "-------------------"
$busybox echo ""
$busybox echo "Uninstaller fixed"
$busybox echo "Added Blu_active governor"
$busybox echo "Improved scrolling for battery profile"
$busybox echo "Improved scrolling for balanced profile"
$busybox echo "Improved performance in performance profile"
$busybox echo "Updated above_hispeed_delay for balanced and battery profiles"
$busybox echo "Updated target_loads for balanced and battery profiles"
$busybox echo "Slightly improved the performance when opening apps"
$busybox echo "Improved the performance for battery profile"
$busybox echo "Improved the performance for balanced profile"
$busybox echo "Reduced micro lags in battery profile (this depends on device)"
$busybox echo ""
$busybox echo "$divider"
$busybox echo ""
$busybox echo "This new update provides a better user experience in general."
$busybox echo ""
$busybox echo -n "b. Back to menu: "
read -r character
case $character in
b|B)$busybox clear;