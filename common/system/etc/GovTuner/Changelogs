busybox="/system/etc/GovTuner/busybox"
ver="3.4"

$busybox echo "CHANGELOG FOR $ver"
$busybox echo "-------------------"
$busybox echo ""
$busybox echo "Introduced the new scaling system for battery and performance profile"
$busybox echo "This new system scales more dynamic according exclusively to the target_loads and is aimed to have a better performance without sacrifying the battery."
$busybox echo ""
$busybox echo "Fixes and improvements in "apply on boot" for some devices"
$busybox echo ""
$busybox echo -n "b. Back to menu: "
read -r character
case $character in
b|B)$busybox clear;