divider="==============================================="
core="/system/etc/GovTuner"
busybox="/system/etc/GovTuner/busybox"
init="/system/etc/init.d"
PROFILE_DIR="$core/current"
ver="3.2"
id="$(id)"; id="${id#*=}"; id="${id%%\(*}"; id="${id%% *}"
CUR_GOVERNOR=$($busybox cat /sys/devices/system/cpu/cpu0/cpufreq/scaling_governor);
GOVERNOR=$CUR_GOVERNOR
CLUSTER_DETECT="/sys/devices/system/cpu/cpu0/cpufreq/$CUR_GOVERNOR"
OUTPUT_ID=$($busybox cat /data/system/test)

# Cluster detection system

# Max CPU Freq
MAX_CPU_FREQ=$($busybox cat /sys/devices/system/cpu/cpu0/cpufreq/cpuinfo_max_freq);
MAX_CPU_FREQ_2=$($busybox cat /sys/devices/system/cpu/cpu2/cpufreq/cpuinfo_max_freq);
MAX_CPU_FREQ_4=$($busybox cat /sys/devices/system/cpu/cpu4/cpufreq/cpuinfo_max_freq);

if [ -e $MAX_CPU_FREQ_2 ]; then
	# Checks if MAX_CPU_FREQ_2 equals to MAX_CPU_FREQ
	# If true, then this means the device is either octa / hexa core, or doesn't have cluster
	if [ $MAX_CPU_FREQ = $MAX_CPU_FREQ_2 ]; then
		# Assume no cluster here
		NO_CLUSTER_1=true
		IS_QUAD_CLUSTER=false
	else
		# This is a quad-core cluster device
		NO_CLUSTER_1=false
		NO_CLUSTER=false
		IS_QUAD_CLUSTER=true
		IS_QPLUS_CLUSTER=false
	fi
fi
if [ -e $MAX_CPU_FREQ_4 ]; then
	# If the system is still stubborn about it, detect the fourth core
	# This is sometimes the marker that it's an octa / hexa core cluster
	if [ $MAX_CPU_FREQ_4 = $MAX_CPU_FREQ ]; then
			# Totally no cluster here
		if [ $NO_CLUSTER_1 = "true" ]; then
			NO_CLUSTER=true
			IS_QPLUS_CLUSTER=false
		else
			# Yep, it's an octa / hexa core cluster
			NO_CLUSTER=false
			IS_QPLUS_CLUSTER=true
			IS_QUAD_CLUSTER=false
		fi
	fi
fi

$busybox sleep 1
$busybox clear
$busybox echo "Checking root"; $busybox sleep 0.2; $busybox clear;
$busybox echo "Checking root."; $busybox sleep 0.2; $busybox clear;
$busybox echo "Checking root.."; $busybox sleep 0.2; $busybox clear;
$busybox echo "Checking root..."; $busybox sleep 0.2; $busybox clear;
$busybox echo "Checking root..."; $busybox sleep 0.5; $busybox clear;
$busybox echo "Checking root.."; $busybox sleep 0.2; $busybox clear;
$busybox echo "Checking root."; $busybox sleep 0.2; $busybox clear;
$busybox echo "Checking root"; $busybox sleep 0.5; $busybox clear;

if [ "$id" != "0" ] && [ "$id" != "root" ]; then
	$busybox sleep 1
	$busybox echo ""
	$busybox echo ""
	$busybox echo "    Unable to gain root access"
	$busybox echo "    You might forgot to use su, or there's a problem with root"
	$busybox echo "    Please type su first"
	$busybox echo "    Then type govtuner"
	$busybox echo ""
	$busybox echo ""
	$busybox sleep 1
	exit
	else
		$busybox clear
		$busybox sleep 0.3
		$busybox echo "Root access succesfully acquired"
		$busybox sleep 0.3
		$busybox echo ""
		$busybox echo "Loading GovTuner setup..."
		$busybox sleep 0.3
		$busybox echo ""
		$busybox sleep 
		$busybox clear
fi
echo "After applying a profile.."
sleep 1
echo "...Wait for 5 to 10 seconds before closing the window"
chmod 755 $init/gt_init

while true; do
if [ -f $PROFILE_DIR/GovTuner_battery ]; then
	profile="\e[1;33mBattery\e[0m"
elif [ -f $PROFILE_DIR/GovTuner_balanced ]; then
	profile="\e[1;36mBalanced\e[0m"
elif [ -f $PROFILE_DIR/GovTuner_performance ]; then
	profile="\e[1;34mPerformance\e[0m"
else
	profile="\e[1;30mDefault\e[0m"
fi


$busybox clear
$busybox echo -e "Current version: $ver"
$busybox echo -e "Governor: $CUR_GOVERNOR"
$busybox echo -e "Profile: $profile"
if [ $NO_CLUSTER_1 = "true" ]; then
	$busybox echo -e "Cluster device: No"
else
	if [ $IS_QUAD_CLUSTER = "true" ]; then
	$busybox echo -e "Cluster device: Yes, quad"
	fi
	if [ $IS_QPLUS_CLUSTER = "true" ]; then
	$busybox echo -e "Cluster device: Yes, hexa / octa"
	fi
fi
$busybox echo ""
$busybox echo $divider
$busybox echo ""
$busybox echo "Please choose a profile:"
$busybox echo -e "\e[01;31m     1 - Battery \e[00;37m"
$busybox echo ""
$busybox echo -e "\e[01;32m     2 - Balanced \e[00;37m"
$busybox echo ""
$busybox echo -e "\e[01;34m     3 - Performance \e[00;37m"
$busybox echo ""
$busybox echo $divider
$busybox echo ""
$busybox echo -e "\e[01;37m u - Disable GovTuner \e[00;37m"
$busybox echo ""
$busybox echo -e "\e[01;37m g - Test GovTuner \e[00;37m" 
$busybox echo "" 
$busybox echo -e "\e[01;37m t - Test Init.d \e[00;37m" 
$busybox echo "" 
$busybox echo -e "\e[01;37mc. $ver Changelog \e[00;37m"
$busybox echo "e. Exit"
$busybox echo ""
$busybox echo -n "Please select a profile:"
read -r character
case $character in
1)$busybox clear
$busybox echo ""
$busybox echo "Activating battery profile"
$busybox sleep 0.3
$busybox echo ""
$busybox sleep 0.2
$busybox echo "Copying battery profile to init.d"
$busybox sleep 0.3
$busybox echo ""
$busybox mount -o remount,rw /system 2>/dev/null
if [ -e $PROFILE_DIR/GovTuner_balanced ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_balanced
fi
if [ -e $PROFILE_DIR/GovTuner_performance ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_performance
fi
$busybox cp -f $core/profiles/GovTuner_battery $PROFILE_DIR/GovTuner_battery
$busybox chmod 755 $PROFILE_DIR/GovTuner_battery
$busybox mount -o remount,ro /system 2>/dev/null
$busybox echo "Applying battery tweaks"
$busybox sleep 0.4
$busybox echo ""
$busybox setsid $PROFILE_DIR/GovTuner_battery&
$busybox sleep 0.3
$busybox echo ""
$busybox sleep 5
$busybox clear
$busybox echo "GovTuner battery profile activated"
$busybox echo ""
$busybox echo ""
$busybox sleep 1
$busybox clear ;;

2)$busybox clear
$busybox echo ""
$busybox echo "Activating balanced profile"
$busybox sleep 0.3
$busybox echo ""
$busybox sleep 0.2
$busybox echo "Copying balanced profile to init.d"
$busybox sleep 0.3
$busybox echo ""
$busybox mount -o remount,rw /system 2>/dev/null
if [ -e $PROFILE_DIR/GovTuner_battery ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_battery
fi
if [ -e $PROFILE_DIR/GovTuner_performance ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_performance
fi
$busybox cp -f $core/profiles/GovTuner_balanced $PROFILE_DIR/GovTuner_balanced
$busybox chmod 755 $PROFILE_DIR/GovTuner_balanced
$busybox mount -o remount,ro /system 2>/dev/null
$busybox echo "Applying balanced tweaks"
$busybox sleep 0.4
$busybox echo ""
$busybox setsid $PROFILE_DIR/GovTuner_balanced&
$busybox sleep 0.3
$busybox echo ""
$busybox sleep 5
$busybox clear
$busybox echo "GovTuner balanced profile activated"
$busybox echo ""
$busybox echo ""
$busybox sleep 1
$busybox clear ;;

3)$busybox clear
$busybox echo ""
$busybox echo "Activating performance profile"
$busybox sleep 0.3
$busybox echo ""
$busybox sleep 0.2
$busybox echo "Copying performance profile to init.d"
$busybox sleep 0.3
$busybox echo ""
$busybox mount -o remount,rw /system 2>/dev/null
if [ -e $PROFILE_DIR/GovTuner_battery ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_battery
fi
if [ -e $PROFILE_DIR/GovTuner_balanced ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_balanced
fi
$busybox cp -f $core/profiles/GovTuner_performance $PROFILE_DIR/GovTuner_performance
$busybox chmod 755 $PROFILE_DIR/GovTuner_performance
$busybox mount -o remount,ro /system 2>/dev/null
$busybox echo "Applying performance tweaks"
$busybox sleep 0.4
$busybox echo ""
$busybox setsid $PROFILE_DIR/GovTuner_performance&
$busybox sleep 0.3
$busybox echo ""
$busybox sleep 5
$busybox clear
$busybox echo "GovTuner performance profile activated"
$busybox echo ""
$busybox echo ""
$busybox sleep 1
$busybox clear ;;

u|U)$busybox clear
kill -9 $OUTPUT_ID
echo "Removing files"
$busybox sleep 0.5
echo "Killing process"
$busybox sleep 0.5
$busybox mount -o remount,rw /system 2>/dev/null
if [ -e $PROFILE_DIR/GovTuner_battery ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_battery
fi
if [ -e $PROFILE_DIR/GovTuner_balanced ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_balanced
fi
if [ -e $PROFILE_DIR/GovTuner_performance ]; then
	$busybox rm -rf $PROFILE_DIR/GovTuner_performance
fi
$busybox echo "Governor_Tuner Disabled"
$busybox sleep 0.5
$busybox clear;;

t|T)$busybox clear
$busybox mount -o remount,rw /system 2>/dev/null
if [ -f "$INIT_TEST" ]; then
    cat $INIT_TEST
   $busybox sleep 2
else
     echo "Init.D is NOT WORKING"
     $busybox sleep 1
     $busybox echo "Sometimes you may have to REBOOT after first flash to confirm if Init.D is working"
     $busybox sleep 2
fi
$busybox sleep 0.5
$busybox clear;;

g|G)$busybox clear
$busybox mount -o remount,rw /system 2>/dev/null
OUTPUT_ID=$($busybox cat /data/system/test);
if ps | grep "$OUTPUT_ID"
    then
            echo "GovTuner is ACTIVE, optimizing your device"
            $busybox sleep 2
else
       echo "Not working"
       $busybox sleep 2
fi
$busybox sleep 0.5
$busybox clear;;

c|C)$busybox clear;
sh $core/Changelogs;;
e|E)$busybox clear;
$busybox mount -o remount,ro /system 2>/dev/null
exit;;
*)$busybox clear;
$busybox echo "Invalid option, please try again"
$busybox sleep 1
exit
esac
done
