# Direct tweaks apply tool

if [ -f /system/etc/init.d/GovTuner_battery ]; then
sh /system/etc/init.d/GovTuner_battery
fi

if [ -f /system/etc/init.d/GovTuner_balanced ]; then
sh /system/etc/init.d/GovTuner_balanced
fi

if [ -f /system/etc/init.d/GovTuner_performance ]; then
sh /system/etc/init.d/GovTuner_performance
fi